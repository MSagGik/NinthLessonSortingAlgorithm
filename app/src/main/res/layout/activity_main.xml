<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="СОРТИРОВЩИК ДАННЫХ"
        android:textColor="#008ACA"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dataIn"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:background="#D9F4FA"
        android:gravity="center"
        android:hint="Поле ввода данных (данные необходимо вводить через запятую)"
        android:padding="10dp"
        android:textColor="#008ACA"
        android:textColorHint="#7E9098"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="25dp"
        android:text="ОТСОРТИРОВАТЬ"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataIn" />

    <TextView
        android:id="@+id/dataSortOut"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_marginTop="20dp"
        android:background="#EFEFEF"
        android:gravity="center"
        android:hint="Поле отсортированных данных"
        android:padding="10dp"
        android:textColor="#008ACA"
        android:textColorHint="#7E9098"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>